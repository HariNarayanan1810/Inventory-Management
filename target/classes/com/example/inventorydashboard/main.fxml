<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.inventorydashboard.controller.MainController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
            <Button text="Dashboard" onAction="#loadDashboard" style="-fx-text-fill: black;" />
            <Button text="Sales Return" onAction="#loadSalesReturn" style="-fx-text-fill: black;" />
            <Button text="Sales Page" onAction="#handleSalesPage" style="-fx-text-fill: black;" />
            <Button text="Purchase Page" onAction="#goToPurchasePage"/>
            <Button text="Supplier Page" onAction="#goToSupplierPage"/>

        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="mainContentPane" />
    </center>
</BorderPane>
